{
  "name": "@willbooster/node-scratchblocks",
  "version": "3.4.0",
  "description": "A fork of scratchblocks modified for Node.js.",
  "license": "MIT",
  "author": "WillBooster LLC",
  "main": "build/scratchblocks.min.js",
  "module": "build/scratchblocks.min.es.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "rollup -c --environment buildTarget:PROD; exit 0;",
    "fmt": "prettier --write *.js syntax/*.js scratch2/*.js scratch3/*.js locales-src/*.js snapshots/*.js",
    "format": "yarn prettier && yarn sort-package-json",
    "locales": "node locales-src/build-locales.js",
    "prettier": "prettier --write \"**/{.*/,}*.{css,htm,html,js,json,jsx,md,scss,ts,tsx,vue,yaml,yml}\" \\\"!**/locales/**\\\"",
    "rollup": "rollup -c",
    "snapshots": "node ./snapshots/",
    "sort-package-json": "sort-package-json",
    "start": "rollup -c -m -w",
    "test": "jest"
  },
  "prettier": "@willbooster/prettier-config",
  "dependencies": {
    "@babel/polyfill": "7.7.0"
  },
  "devDependencies": {
    "@babel/cli": "7.7.4",
    "@babel/core": "7.7.4",
    "@babel/plugin-external-helpers": "7.7.4",
    "@babel/plugin-transform-object-assign": "7.7.4",
    "@babel/preset-env": "7.7.4",
    "@willbooster/eslint-config-pure-js": "0.1.6",
    "@willbooster/prettier-config": "2.1.0",
    "browserify": "16.5.0",
    "eslint": "6.7.0",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.1.0",
    "jest": "24.7.1",
    "lint-staged": "9.4.3",
    "pofile": "1.0.10",
    "prettier": "1.19.1",
    "puppeteer": "2.0.0",
    "rollup": "1.27.4",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-babel-minify": "6.2.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-serve": "1.0.1",
    "scratch-l10n": "3.6.20191120161253",
    "sort-package-json": "1.23.1"
  }
}
